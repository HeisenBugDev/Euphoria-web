.login
  %h2
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    %div
      = f.text_field :username, :placeholder => 'Username', :autofocus => true, :class => 'center'
    %div
      = f.email_field :email, :placeholder => 'Email', :class => 'center'
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    %div
      = f.password_field :password, :placeholder => 'Change password', :autocomplete => "off", :class => 'center'
    %div
      = f.password_field :password_confirmation, :placeholder => 'Confirm Change', :class => 'center'
    %div
      = f.password_field :current_password, :placeholder => 'Current Password (any change)', :class => 'center'
    %div= f.submit "Update", :class => 'center signin'
  %p
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'center signin'}
  = link_to "Back", :back
