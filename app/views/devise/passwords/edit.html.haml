.login
  %h2 Change your password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %div
      = f.password_field :password, :autofocus => true, :placeholder => "New password", :class => 'center'
    %div
      = f.password_field :password_confirmation, :placeholder => "Confirm", :class => 'center'
    %div= f.submit "Change my password", :class => 'center signin'
  = render "devise/shared/links"
