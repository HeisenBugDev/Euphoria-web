.login
  %h2 Login
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => 'center'
    %div
      = f.password_field :password, :placeholder => 'Password', :class => 'center'
    - if devise_mapping.rememberable?
      %div
        .dark-blue-gray
          = f.check_box :remember_me
          = f.label :remember_me
    %div= f.submit "Sign in", :class => 'center signin'
  = render "devise/shared/links"
